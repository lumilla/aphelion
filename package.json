{
  "name": "@lumilla/aphelion",
  "version": "1.1.0",
  "description": "Aphelion - A beautiful, interactive math editor for the web",
  "type": "module",
  "main": "dist/aphelion.js",
  "module": "dist/aphelion.es.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/aphelion.es.js",
      "require": "./dist/aphelion.js"
    },
    "./package.json": "./package.json",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --mode lib && npm run copy:styles",
    "copy:styles": "node -e \"require('fs').copyFileSync('src/styles/aphelion.css', 'dist/styles.css')\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "doctest": "accudoc",
    "doctest:verbose": "accudoc --verbose"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "accudoc": "^0.4.0",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "vite": "npm:rolldown-vite@^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18",
    "typescript": "^5.9.3",
    "@vitest/coverage-v8": "^4.0.18"
  },
  "keywords": [
    "math",
    "mathematics",
    "aphelion",
    "latex",
    "equation",
    "editor",
    "wysiwyg"
  ],
  "author": "@lumilla",
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumilla/aphelion.git"
  }
}
